.links-wapper
  width 700px
  margin 0 auto
  padding-top 50px
  margin-top 50px
  h3
    text-align center
    font-size 28px
    padding-bottom 20px
    
  .link-tips
    margin 10px 0
    h4
      font-size 18px
      padding 10px 0
    span
      color #666

ul.links
  margin 20px 0
  overflow hidden
  li
    float left
    width 50%
    position: relative;
    transition: all .3s ease-out;
    border-radius: 5px;
    &:hover
      background rgba(230,244,250,.5)
    a
      display: block;
      padding: 0 10px 0 90px;
      height: 90px;
      color: #555;
      text-decoration none
      img
        width: 60px;
        height: 60px;
        border-radius: 50%;
        position: absolute;
        top: 15px;
        left: 15px;
        cursor: pointer;
        margin: 0;
      h4
        padding-top 20px
        font-size 16px
      p
        margin: 10px 0;
        line-height: 24px;